    </dependency>
    <dependency>
      <groupId>org.apache.submarine</groupId>
      <artifactId>submarine-client</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <groupId>com.google.protobuf</groupId>
          <artifactId>protobuf-java</artifactId>
